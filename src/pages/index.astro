---
import EmptyLayout from "../layouts/EmptyLayout.astro";
import IconLink from "~/components/IconLink.astro";
// import ToggleTheme from "~/components/core/ToggleTheme.astro";
import ThemeChange from "~/components/ThemeChange.astro";
---

<EmptyLayout>
    <div class="fixed top-4 right-4 z-10">
        <!-- <ToggleTheme /> -->
        <ThemeChange />
    </div>

    <div class="landing gap-3">
        <IconLink
            to="/arquitectura"
            text="Arquitectura"
            title="Arquitectura de los servicios en línea"
            icon="📐"
        />

        <IconLink
            to="/javascript101"
            title="Javascript 101"
            icon="🦄"
            text="Javascript"
        />

        <IconLink to="/test" title="Storyblok" icon="👆" text="Storyblock" />

        <IconLink to="/node" title="Node 101">
            <div class="icon">🐱‍👤</div>
            <div class="text">Node</div>
        </IconLink>

        <IconLink to="/node/http" title="node.http">
            <div class="icon">🤢</div>
            <div class="text">node.http</div>
        </IconLink>

        <IconLink to="/calculadora" title="calculadora">
            <div class="icon">📏</div>
            <div class="text">calculadora</div>
        </IconLink>

        <IconLink to="/calculadora/refactor" title="calculadora refactor">
            <div class="icon">🧠</div>
            <div class="text">calculadora refactor</div>
        </IconLink>

        <IconLink to="/express/static" title="express static">
            <div class="icon">🐶</div>
            <div class="text">express.static</div>
        </IconLink>

        <IconLink to="/wordlesolver" title="wordle solver">
            <div class="icon">😎</div>
            <div class="text">wordle.solver</div>
        </IconLink>

        <IconLink to="/flagture" title="flagture">
            <div class="icon">🏴‍☠️</div>
            <div class="text">flagture</div>
        </IconLink>

        <IconLink to="/memegram" title="Memegram">
            <div class="icon">📷</div>
            <div class="text">memegram</div>
        </IconLink>

        <IconLink to="/rest" title="rest">
            <div class="icon">👓</div>
            <div class="text">rest</div>
        </IconLink>

        <IconLink to="/authentication" title="Autenticación">
            <div class="icon">🔒</div>
            <div class="text">auth*</div>
        </IconLink>

        <IconLink to="/memegram/graphql" title="Memegram + GraphQL">
            <div class="icon">📸</div>
            <div class="text">memegram<br />GraphQL</div>
        </IconLink>

        <IconLink to="/memegram/openapi" title="memegram-openapi">
            <div class="icon">📸</div>
            <div class="text">memegram<br />openapi</div>
        </IconLink>

        <IconLink to="/memegram/socketio" title="memegram-sockeio">
            <div class="icon">📸</div>
            <div class="text">memegram<br />socketio</div>
        </IconLink>
    </div>
</EmptyLayout>

<style is:global>
    .landing {
        position: relative;

        width: 100%;
        height: 100vh;
        display: flex;

        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        align-content: center;

        font-size: 1em;

        overflow: hidden;
    }
</style>
